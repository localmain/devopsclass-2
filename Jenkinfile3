pipeline { 

    environment { 

        registry = "abhi1998" 

        registryCredential = 'munna998' 

        dockerImage = 'babudocker' 

    }


    agent { 
       label 'papu'
}
    stages { 

        stage('Cloning our Git') { 

            steps { 

                git 'https://github.com/localmain/devopsclass-2.git' 

            }

        } 

        stage('Building our image') { 

            steps { 

                script { 

                    dockerImage = docker.build registry + ":$BUILD_NUMBER" 

                }

            } 

        }

        stage('Deploy our image') { 

            steps { 

                script { 

                    docker.withRegistry( 'munna998' ) { 

                        dockerImage.push() 

                    }

                } 

            }

        } 

        stage('Cleaning up') { 

            steps { 

                sh "docker rmi $registry:$BUILD_NUMBER" 

            }

        } 

    }
}
